{
    "manifest_version": 3,
    "name": "Hover Capture",
    "version": "1.0",
    "description": "Only capture the parts you have selected.",
    "icons": {
        "16": "images/16.png",
        "32": "images/32.png",
        "48": "images/48.png",
        "128": "images/128.png"
    },
    "permissions": [
        "tabs",
        "activeTab",
        "scripting",
        "nativeMessaging",
        "debugger"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "background": {
        "service_worker": "scripts/background.js"
    },
    "action": {
        "default_icon": {
            "16": "images/16.png",
            "32": "images/32.png",
            "48": "images/48.png",
            "128": "images/128.png"
        },
        "default_title": "这是一个示例Chrome插件"
    }
}